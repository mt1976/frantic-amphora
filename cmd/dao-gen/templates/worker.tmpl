// Worker is a job that is scheduled to run at a predefined interval.
func Worker(j jobs.Job, db *database.DB) {
	clock := timing.Start(jobs.CodedName(j), "Initialise", j.Description())
	oldDB := activeDB
	dbSwitched := false

	if db != nil {
		if activeDB.Name != db.Name {
			logHandler.EventLogger.Printf("Switching to %v.db", db.Name)
			activeDB = db
			dbSwitched = true
		}
	}

	jobProcessor(j)

	if dbSwitched {
		logHandler.EventLogger.Printf("Switching back to %v.db from %v.db", oldDB.Name, activeDB.Name)
		activeDB = oldDB
	}
	clock.Stop(1)
}

// jobProcessor processes jobs related to this tableName entity.
func jobProcessor(j jobs.Job) {
	clock := timing.Start(jobs.CodedName(j), "Process", j.Description())
	count := 0

	entries, err := GetAll()
	if err != nil {
		logHandler.ErrorLogger.Printf("[%v] Error: '%v'", jobs.CodedName(j), err.Error())
		return
	}

	n := len(entries)
	if n == 0 {
		logHandler.ServiceLogger.Printf("[%v] No %vs to process", jobs.CodedName(j), tableName)
		clock.Stop(0)
		return
	}

	for i, rec := range entries {
		logHandler.ServiceLogger.Printf("[%v] %v(%v/%v)", jobs.CodedName(j), tableName, i+1, n)
		_ = rec.UpdateWithAction(context.Background(), audit.SERVICE, "Job Processing "+j.Name())
		count++
	}
	clock.Stop(count)
}
